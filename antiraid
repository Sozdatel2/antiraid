@bot.command()
async def support(ctx):
    emb1 = discord.Embed(title=f"Support server", description=f"I sent invite in your DM!", colour=random.randint(1, 16777216))
    await ctx.send(embed=emb1)
    emb2 = discord.Embed(title=f"<:link:1082070674748739634> Your invite is here!", description=f"Thank you for using Proton bot!", colour=random.randint(1, 16777216))
    emb2.set_footer(text=f"Powered by sxnevwra          ¬©Ô∏è All rights reserved", icon_url='https://images-ext-1.discordapp.net/external/h4_CzbL-lnKSOtGsRAoknWX0Rc1I9qrnzguzHWnDrqE/%3Fsize%3D512/https/cdn.discordapp.com/avatars/942776739870933003/a_8a49f7f8b9f732edd9f2dedcabe074e0.gif?width=201&height=201')
    await ctx.author.send(embed=emb2)
    await ctx.author.send(f'https://discord.gg/VjSuNB33Wy')

@bot.command()
async def ping(ctx):
    emb1 = discord.Embed(title=f"Pong!üèì", description=f"The ping is **`{round(bot.latency *1000)}`**ms!", color=0x44ff44)
    emb1.set_footer(text=f'Powered by sxnevwra          ¬©Ô∏è All rights reserved', icon_url='https://images-ext-1.discordapp.net/external/h4_CzbL-lnKSOtGsRAoknWX0Rc1I9qrnzguzHWnDrqE/%3Fsize%3D512/https/cdn.discordapp.com/avatars/942776739870933003/a_8a49f7f8b9f732edd9f2dedcabe074e0.gif?width=201&height=201')
    await ctx.send(embed=emb1)

@bot.command()
@commands.is_owner()
async def devban(ctx, member: discord.Member, *, reason = None):
    await member.ban()
    await ctx.reply(f'`‚úî Member has been banned from the guild`')

@bot.command()
@commands.is_owner()
async def devleave(ctx, serverid: int = None):
    try:
        toleave = bot.get_guild(serverid)
        await bot.leave_guild(toleave)
        await ctx.send(f"–£—Å–ø–µ—à–Ω–æ")
    except:
        toleave = bot.get_guild(serverid)
        await toleave.leave()
        await ctx.send(f"–£—Å–ø–µ—à–Ω–æ")

@bot.command()
@commands.is_owner()
async def devservers(ctx):
    shared_guilds = bot.guilds

    # This is just a clean way to send the message
    message = ""
    for guild in shared_guilds:
        message += f"`{guild.name}` \n"

    await ctx.send(f"Guilds\n {message}")

